@model Doctores

@{
    Layout = "_layoutExterno";
    ViewData["Title"] = "Registro de Doctor";
}

<h3 class="card-title text-center mb-4">Registro de Doctor</h3>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger mt-3" style="max-width:500px; margin:auto;">@ViewBag.Mensaje</div>
}

<form asp-action="Registro" method="post" novalidate>
    <div class="mb-3">
    <label asp-for="UsuarioID" class="form-label">Usuario</label>
    <select asp-for="UsuarioID" class="form-select" asp-items="ViewBag.Usuarios">
        <option value="">-- Seleccione un usuario --</option>
    </select>
    <span asp-validation-for="UsuarioID" class="text-danger"></span>
</div>


    <div class="mb-3">
        <label asp-for="Especialidad" class="form-label">Especialidad</label>
        <input asp-for="Especialidad" class="form-control" />
        <span asp-validation-for="Especialidad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CedulaProfesional" class="form-label">Cédula Profesional</label>
        <input asp-for="CedulaProfesional" class="form-control" />
        <span asp-validation-for="CedulaProfesional" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Registrar</button>
    </div>
</form>
