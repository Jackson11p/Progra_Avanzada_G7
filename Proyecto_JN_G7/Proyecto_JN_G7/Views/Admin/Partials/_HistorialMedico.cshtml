<div class="card" data-partial-name="HistorialMedico">
    <div class="card-header d-flex align-items-center justify-content-between">
        <div class="fw-semibold"><i class="bi bi-journal-medical me-1"></i> Historial Médico</div>

        <div class="d-flex align-items-center gap-2">
            <label for="hmPaciente" class="me-2 mb-0 text-muted">Paciente</label>
            <select id="hmPaciente" class="form-select form-select-sm" style="min-width:320px">
                <option value="">Seleccione un paciente…</option>

            </select>

            <button type="button" class="btn btn-sm btn-outline-primary" id="hm-btn-reload"
                    title="Recargar historial del paciente seleccionado">
                <i class="bi bi-arrow-clockwise"></i>
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:170px">Fecha/Hora</th>
                    <th>Doctor</th>
                    <th style="width:120px">Estado</th>
                    <th>Motivo</th>
                    <th style="width:120px">Adjuntos</th>
                    <th style="width:140px">Acciones</th>
                </tr>
            </thead>
            <tbody id="hm-rows">
                <tr><td colspan="6" class="text-center text-muted py-4">Seleccione un paciente para ver su historial.</td></tr>
            </tbody>
        </table>
    </div>
</div>