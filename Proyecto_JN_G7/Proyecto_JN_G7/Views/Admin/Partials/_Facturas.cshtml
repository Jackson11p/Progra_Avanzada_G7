@model IEnumerable<Proyecto_JN_G7.Models.Factura>

<div class="card">
    <div class="card-header fw-semibold">
        <i class="bi bi-receipt me-1"></i> Facturas
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>ID Factura</th>
                    <th>ID Cita</th>
                    <th>Fecha Emisión</th>
                    <th>Total</th>
                    <th>Estado de Pago</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No hay facturas registradas.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var factura in Model)
                    {
                        <tr>
                            <td>@factura.FacturaID</td>
                            <td>@factura.CitaID</td>
                            <td>@factura.FechaEmision.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@factura.Total.ToString("C")</td>
                            <td>@factura.EstadoPago</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
