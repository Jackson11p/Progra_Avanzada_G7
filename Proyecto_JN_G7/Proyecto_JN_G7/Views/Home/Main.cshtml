@{
    Layout = "_layoutMain";
    ViewData["Title"] = "Dashboard";
}

<div class="row gx-4">
    <div class="col-12">
        <h2 class="mb-4">Bienvenido </h2>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <i class="bi bi-people fs-2 text-primary"></i>
                <h5 class="card-title mt-2">Pacientes</h5>
                <p class="card-text text-muted">Gestiona la lista de pacientes registrados.</p>
                <a class="btn btn-sm btn-outline-primary">Ir a Pacientes</a>
            </div>
        </div>
    </div>

    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <i class="bi bi-calendar-check fs-2 text-success"></i>
                <h5 class="card-title mt-2">Citas</h5>
                <p class="card-text text-muted">Revisa y programa nuevas citas médicas.</p>
                <a class="btn btn-sm btn-outline-success">Ir a Citas</a>
            </div>
        </div>
    </div>


    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <i class="bi bi-person-badge fs-2 text-warning"></i>
                <h5 class="card-title mt-2">Doctores</h5>
                <p class="card-text text-muted">Administra el personal médico de la clínica.</p>
                <a class="btn btn-sm btn-outline-warning">Ir a Doctores</a>
            </div>
        </div>
    </div>
</div>
