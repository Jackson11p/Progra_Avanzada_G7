<section id="appointment" class="appointment section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Agendar Cita</h2>
        <p>Complete el formulario y nos pondremos en contacto para confirmar la disponibilidad.</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <form id="appointmentForm" novalidate>
            <div class="row">
                <div class="col-md-4 form-group">
                    <input type="text" name="name" id="name" class="form-control"
                           placeholder="Nombre completo" required>
                    <div class="invalid-feedback">Ingresa tu nombre.</div>
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <input type="email" name="email" id="email" class="form-control"
                           placeholder="Correo electrónico" required>
                    <div class="invalid-feedback">Ingresa un correo válido.</div>
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <input type="tel" name="phone" id="phone" class="form-control"
                           placeholder="Teléfono" inputmode="tel" pattern="^[0-9+\-\s()]{7,20}$" required>
                    <div class="invalid-feedback">Ingresa un teléfono válido.</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 form-group mt-3">
                    <input type="datetime-local" name="date" id="date" class="form-control datepicker"
                           placeholder="Fecha y hora preferidas" required>
                    <div class="invalid-feedback">Selecciona fecha y hora.</div>
                </div>

                <div class="col-md-4 form-group mt-3">
                    @await Html.PartialAsync(
                    "Partials/_SelectDoctor",
                                        (IEnumerable<Proyecto_JN_G7.Models.DoctorListItem>)(ViewBag.Doctores ?? new List<Proyecto_JN_G7.Models.DoctorListItem>())
                                        )
                </div>
            </div>

            <div class="form-group mt-3">
                <textarea class="form-control" name="message" id="message" rows="5"
                          placeholder="Motivo de la consulta / notas adicionales (opcional)"></textarea>
            </div>

            <!-- Modal de confirmación de cita -->
            <div class="modal fade" id="appointmentSuccessModal" tabindex="-1"
                 aria-labelledby="appointmentSuccessLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header border-0">
                            <h5 class="modal-title" id="appointmentSuccessLabel">
                                <i class="bi bi-check-circle-fill me-2"></i> Cita solicitada
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                        </div>
                        <div class="modal-body">
                            <p>Tu cita ha sido <strong>solicitada exitosamente</strong>. Nos pondremos en contacto para confirmar la disponibilidad.</p>
                            <ul class="list-unstyled small mb-0">
                                <li><i class="bi bi-person me-1"></i> <span id="apmtModalName"></span></li>
                                <li><i class="bi bi-calendar-event me-1"></i> <span id="apmtModalDate"></span></li>
                                <li><i class="bi bi-person-badge me-1"></i> <span id="apmtModalDoctor"></span></li>
                            </ul>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Entendido</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3 text-center">
                <div class="loading d-none">Enviando…</div>
                <div class="error-message d-none">Ocurrió un error. Intenta más tarde.</div>
                <div class="sent-message d-none">¡Tu solicitud de cita fue enviada correctamente!</div>
                <button type="submit" class="btn btn-primary mt-2">Solicitar cita</button>
            </div>
        </form>
    </div>
</section>
<!-- /Appointment Section -->
