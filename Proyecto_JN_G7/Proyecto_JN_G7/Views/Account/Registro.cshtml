@model Proyecto_JN_G7.Models.Autenticacion

@{
    Layout = "_layoutExterno";
    ViewData["Title"] = "Registro";
}

<h3 class="card-title text-center mb-4">Crear Cuenta</h3>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Mensaje</div>
}

<form asp-action="Registro" method="post" novalidate>
    <div class="mb-3">
        <label for="Cedula" class="form-label">Identificación</label>
        <input asp-for="Cedula" class="form-control" id="Identificacion" oninput="ConsultarNombre()" />
        <span asp-validation-for="Cedula" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="NombreCompleto" class="form-label">Nombre Completo</label>
        <input asp-for="NombreCompleto" class="form-control bg-light text-dark" id="Nombre" readonly />
        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="CorreoElectronico" class="form-label">Correo electrónico</label>
        <input asp-for="CorreoElectronico" class="form-control"/>
        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ContrasenaHash" class="form-label">Contraseña</label>
        <input asp-for="ContrasenaHash" class="form-control" type="password"/>
        <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Procesar</button>
    </div>

    <div class="mt-3 text-center">
        <a asp-controller="Account" asp-action="Login">¿Ya tienes una cuenta? Inicia sesión aquí</a><br />
        <a asp-controller="Home" asp-action="Index" class="text-muted">← Volver al inicio</a>
    </div>
</form>
<script src="~/js/generales.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>