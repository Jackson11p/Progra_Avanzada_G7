@model Proyecto_JN_G7.Models.Autenticacion

@{
    Layout = "_layoutExterno";
    ViewData["Title"] = "Login";
}

<h3 class="card-title text-center mb-4">Iniciar Sesión</h3>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Mensaje</div>
}

<form asp-action="Login" method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label for="CorreoElectronico" class="form-label">Correo electrónico</label>
        <input asp-for="CorreoElectronico" class="form-control" />
        <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ContrasenaHash" class="form-label">Contraseña</label>
        <input asp-for="ContrasenaHash" class="form-control" type="password" />
        <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
    </div>

    <div class="d-grid">
        <button type="submit" class="btn btn-primary">Procesar</button>
    </div>

    <div class="mt-3 text-center">
        <a asp-controller="Account" asp-action="RecuperarAcceso">¿Olvidó su contraseña?</a><br />
        <a asp-controller="Account" asp-action="Registro">¿No tiene cuenta? Regístrese aquí</a><br />
        <a asp-controller="Home" asp-action="Index" class="text-muted">← Volver al inicio</a>
    </div>
</form>
